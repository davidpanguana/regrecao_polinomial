{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "activate-venv",
      "type": "shell",
      "command": "call .progrecao_polinomial\\Scripts\\activate",
      "windows": {
        "command": "call .venv\\Scripts\\activate.bat"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "start-uvicorn",
      "type": "shell",
      "command": "uvicorn api_modelo_salario:app --reload",
      "windows": {
        "command": "uvicorn api_modelo_salario:app --reload"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Uvicorn running on.*",
            "endsPattern": ".*Application shutdown.*"
          }
        }
      ],
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "group": "servers"
      },
      "dependsOn": ["activate-venv"]
    },
    {
      "label": "start-streamlit",
      "type": "shell",
      "command": "streamlit run app_streamlit_salario.py",
      "windows": {
        "command": "streamlit run app_streamlit_salario.py"
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "group": "servers"
      },
      "dependsOn": ["activate-venv"]
    },
    {
      "label": "start-all",
      "dependsOn": ["start-uvicorn", "start-streamlit"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}